<%- include('parts/user.header.ejs') %>
  <%- include('parts/user.navbar.ejs') %>

    <section class="loginGrace text-center">
      <div class="container">
        <div class="login-content">
          <h1>LOGIN</h1>
          <div class="bt-divider"></div>
          <h4>Letâ€™s get started!
          </h4>
          <form action="/login" method="POST">
            <% if(typeof err !=='undefined' ) { %>
              <div style="margin-top: 10px; color: #f00; margin-bottom: 10px;">
                <%= err %>
              </div>
              <% } %>
                <div class="form-group">
                  <div class="col-sm-12">
                    <input type="email" id="inputEmail" placeholder="Email" name="email">
                  </div>
                  <div class="errors text-left" style="padding-left: 15px;">
                    <% if(typeof validateErrors !=='undefined' ) { %>
                      <% for(let i=0; i < validateErrors.length; i++) { %>
                        <% if(validateErrors[i].param=='email' ) { %>
                          <div style="margin-top: 10px; color: #f00;">
                            <%= validateErrors[i].msg %>
                          </div>
                          <% }}} %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-12">
                    <input type="password" id="inputPassword" placeholder="Password" name="password">
                  </div>
                  <div class="errors text-left" style="padding-left: 15px;">
                    <% if(typeof validateErrors !=='undefined' ) { %>
                      <% for(let i=0; i < validateErrors.length; i++) { %>
                        <% if(validateErrors[i].param=='password' ) { %>
                          <div style="margin-top: 10px; color: #f00;">
                            <%= validateErrors[i].msg %>
                          </div>
                          <% }}} %>
                  </div>
                </div>
                <a href="">
                  Forget your password ?
                </a>
                <div class="form-group">

                  <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary form-control">Login</button>
                  </div>
                </div>
          </form>
          <hr>
          <h4>Don't have an acount ?</h4>
          <a href="/register" class="btn btn-primary form-control reg">Register</a>
        </div>
      </div>
    </section>
    <%- include('parts/user.footer.ejs') %>