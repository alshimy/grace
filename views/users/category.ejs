<%- include('parts/user.header.ejs') %>
  <%- include('parts/user.navbar.ejs') %>
    <% if(products && products.length !=0) { %>
      <section class="cat-products shuffleCategory text-center" style="padding: 30px 0;">
        <div class="container">
          <div class="row">
            <% products.forEach(element=> { %>
              <div class="col">
                <div class="product-content">
                  <div class="new-badge">
                    <span>New</span>
                  </div>
                  <img src="../<%= element.image %>" alt="Product">
                  <h5>
                    <%= element.name %>
                  </h5>
                  <p>$<%= element.price %>
                  </p>
                  <a href="/product/<%= element._id %>">Buy Now</a>
                </div>
              </div>

              <% }); %>
          </div>
        </div>

      </section>
      <% } else { %>
        <div class="container text-center" style="height: 70vh;">
          <div class="alert alert-danger">
            <h1>There is no products for this brand yet.</h1>
          </div>
        </div>
        <% } %>
          <%- include('parts/user.footer.ejs') %>